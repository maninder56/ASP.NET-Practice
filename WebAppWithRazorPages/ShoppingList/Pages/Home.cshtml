@page 
@model ShoppingList.Pages.HomeModel
@{
    ViewData["Title"] = "Home";

    int itemCount = 0; 
}

<article>
    <section>
        <header>
            <h2>Shopping List</h2>
        </header>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th></th>
                    @* <th></th> *@
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.ShoppingList)
                {
                        <tr>
                            <td>@(++itemCount)</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Quantity</td>
                            <td class="CustomLink">
                                <a href="/ItemInfo/@item.Id">Detials</a>
                            </td>
                            @* <td class="CustomLink DeleteItemLink">
                                <a href="#">Delete</a>
                            </td> *@
                        </tr>
                }
            </tbody>
        </table>

        <div class="CustomLink NewItemLink">
            <a href="/AddItem">Add Item</a>
        </div>

    </section>
</article>
