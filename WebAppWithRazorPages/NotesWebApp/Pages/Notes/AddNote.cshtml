@page
@model NotesWebApp.Pages.Notes.AddNoteModel
@{
    ViewData["Title"] = "Add Note"; 
}


<article class="add-note">
    <header class ="home-button">
        <a asp-page="/Notes/AllNotes">
            <h2>Home</h2>
        </a>
    </header>
    <section>
        <header>
            <h3>Add Note</h3>
        </header>

        @if(Model.InvalidFormData)
        {
            <p class="danger">Invalid Data, please fill in required fields</p>
        }
        else if (Model.InputIsNullAfterPost || Model.FailedToSaveNote)
        {
            <p class="danger">Failed to save note, please try again</p>
        }

        <div class="add-note-form"> 
            <form method="post">

                <div class="form-title">
                    <input asp-for="Input.Title" placeholder="Title"/>
                    <span asp-validation-for="Input.Title"></span>
                </div>


                <div class="form-content">
                    @* <input asp-for="Input.Content" /> *@
                    <textarea asp-for="Input.Content" placeholder="Enter Text here..."></textarea>
                </div>

                <div class="form-button">
                    <button type="submit">Save</button>
                </div>
            </form>
        </div>
    </section>
</article>

